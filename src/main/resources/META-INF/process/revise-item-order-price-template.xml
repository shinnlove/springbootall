<?xml version="1.0" encoding="utf-8"?>
<template id="30001" name="revise_item_order_price_template" desc="单个改价项订单金额子流程" parent="30000">

    <metadata>
        <status no="-1" seq="-1" name="init" desc="流程初始化" ps="-1"/>
        <status no="1" seq="1" name="risk_audit" desc="待政策审核" ps="1" default="true"/>
        <status no="2" seq="2" name="advertiser_confirm" desc="待客户确认" ps="2"/>
        <status no="4" seq="4" name="accepted" desc="改价项已完成" ps="4" ac="1"/>
        <status no="5" seq="5" name="rejected" desc="改价项已拒绝" ps="5" ac="2"/>
        <status no="6" seq="6" name="canceled" desc="改价项已取消" ps="6" ac="3"/>
    </metadata>

    <init>
        <pre>
            <handler seq="1" ref="queryOrderInfoHandler" desc="查询订单最新信息"/>
            <handler seq="2" ref="reviseRegisterChildHandler" desc="改价子流程注册"/>
        </pre>
        <dispatch>
            <destination no="1"/>
            <destination no="2"/>
        </dispatch>
    </init>

    <action id="30101" name="order_price_audit_accept" desc="订单金额改价项风控审核通过" source="1" destination="2"/>

    <action id="30102" name="order_price_advertiser_accept" desc="订单金额改价项客户同意" source="2" destination="4"/>

    <action id="30103" name="order_audit_reject" desc="订单金额改价项政审拒绝" source="1" destination="5"/>

    <action id="30104" name="order_ad_reject" desc="订单金额改价项客户拒绝" source="2" destination="5"/>

    <action id="30105" name="order_revise_reject" desc="订单金额改价项被拒绝" source="4" destination="5"/>

    <action id="30106" name="order_revise_cancel" desc="订单金额改价项取消" destination="6"/>

</template>
