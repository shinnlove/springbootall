<?xml version="1.0" encoding="utf-8"?>
<template id="30003" name="revise_item_order_expense_template" desc="单个改价项订单支出子流程" parent="30000">

    <metadata>
        <status no="-1" seq="-1" name="init" desc="流程初始化" ps="-1"/>
        <status no="1" seq="1" name="risk_audit" desc="待风控审核" ps="1" default="true"/>
        <status no="4" seq="4" name="accepted" desc="改价项已完成" ps="4" ac="1"/>
        <status no="5" seq="5" name="rejected" desc="改价项已拒绝" ps="5" ac="2"/>
        <status no="6" seq="6" name="canceled" desc="改价项已取消" ps="6" ac="3"/>
    </metadata>

    <init>
        <dispatch>
            <destination no="1">
                <handler seq="1" ref="notifyRiskAuditHandler" desc="通知风控审核"/>
            </destination>
            <destination no="4">
                <handler seq="1" ref="notifyAdvertiserConfirmHandler" desc="订单支出改价项完成"/>
            </destination>
        </dispatch>
    </init>

    <accept>
        <handler seq="1" ref="acceptProcessHandler" desc="单个改价项完成后trigger"/>
    </accept>

    <reject>
        <handler seq="1" ref="rejectProcessHandler" desc="单个改价项拒绝后trigger"/>
    </reject>

    <cancel>
        <handler seq="1" ref="cancelProcessHandler" desc="单个改价项流程关闭后的trigger"/>
    </cancel>

    <action id="30301" name="audit_accept" desc="订单支出项审核同意" source="1" destination="4">
    </action>

    <action id="30302" name="expense_revise_reject" desc="订单支出项改价拒绝" destination="5">
    </action>

    <action id="30303" name="expense_revise_cancel" desc="订单支出项改价关闭" destination="6">
    </action>

</template>
