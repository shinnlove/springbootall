<?xml version="1.0" encoding="utf-8"?>
<template id="30002" name="revise_item_service_fee_template" desc="单个改价项信息技术费子流程" parent="30000">

    <metadata>
        <status no="-1" seq="-1" name="init" desc="流程初始化" ps="-1"/>
        <status no="1" seq="1" name="risk_audit" desc="待风控审核" ps="1" default="true"/>
        <status no="2" seq="2" name="advertiser_confirm" desc="待客户确认" ps="2"/>
        <status no="4" seq="4" name="accepted" desc="改价项已完成" ps="4" ac="1"/>
        <status no="5" seq="5" name="rejected" desc="改价项已拒绝" ps="5" ac="2"/>
        <status no="6" seq="6" name="canceled" desc="改价项已取消" ps="6" ac="3"/>
    </metadata>

    <init>
        <dispatch>
            <destination no="1">
                <handler seq="1" ref="notifyRiskAuditHandler" desc="通知风控审核"/>
            </destination>
            <destination no="2">
                <handler seq="1" ref="notifyAdvertiserConfirmHandler" desc="通知客户审核"/>
            </destination>
        </dispatch>
    </init>

    <accepted>
        <handler seq="1" ref="acceptProcessHandler" desc="单个改价项完成后trigger"/>
    </accepted>

    <rejected>
        <handler seq="1" ref="rejectProcessHandler" desc="单个改价项拒绝后trigger"/>
    </rejected>

    <canceled>
        <handler seq="1" ref="cancelProcessHandler" desc="单个改价项流程关闭后的trigger"/>
    </canceled>

    <action id="30201" name="fee_revise_audit_accept" desc="信息技术费项风控审核同意" source="1" destination="2">
    </action>

    <action id="30202" name="fee_pending_advertiser_confirm" desc="信息技术费客户同意" source="2" destination="4">
    </action>

    <action id="30203" name="fee_revise_reject" desc="信息技术费改价项拒绝" destination="5">
    </action>

    <action id="30204" name="fee_revise_cancel" desc="信息技术费改价项取消" destination="6">
    </action>

</template>
