<?xml version="1.0" encoding="utf-8"?>
<template id="30002" name="revise_item_service_fee_template" desc="单个改价项信息技术费子流程" parent="30000">

    <metadata>
        <status no="-1" name="init" desc="流程初始化" ps="-1"/>
        <status no="1" name="risk_audit" desc="待风控审核" ps="1"/>
        <status no="2" name="customer_confirm" desc="待客户确认" ps="2"/>
        <status no="4" name="accepted" desc="改价项已完成" ps="4"/>
        <status no="5" name="rejected" desc="改价项已拒绝" ps="5"/>
        <status no="6" name="canceled" desc="改价项已取消" ps="6"/>
    </metadata>

    <init>
        <pre>
            <handler seq="1" ref="createReviseProcessHandler" desc="创建单个改价项流程"/>
        </pre>
        <dispatch>
            <destination no="1">
                <handler seq="1" ref="notifyRiskAuditHandler" desc="通知风控审核"/>
            </destination>
            <destination no="2">
                <handler seq="1" ref="notifyAdvertiserConfirmHandler" desc="通知客户审核"/>
            </destination>
        </dispatch>
        <post>
            <handler seq="1" ref="notifyAdvertiserConfirmHandler" desc="通知客户审核"/>
        </post>
    </init>

    <accepted>
        <handler seq="1" ref="acceptProcessHandler" desc="单个改价项完成后trigger"/>
    </accepted>

    <rejected>
        <handler seq="1" ref="rejectProcessHandler" desc="单个改价项拒绝后trigger"/>
    </rejected>

    <canceled>
        <handler seq="1" ref="cancelProcessHandler" desc="单个改价项流程关闭后的trigger"/>
    </canceled>

    <action id="30201" name="fee_revise_audit" desc="信息技术费项触发阈值待风控审核" destination="1" entrance="true">
        <handler seq="1" ref="updateRegisterStatusHandler" desc="更新注册表状态"/>
        <handler seq="2" ref="notifyRiskAuditHandler" desc="通知风控审核处理器"/>
    </action>

    <action id="30202" name="fee_pending_advertiser_confirm" desc="信息技术费待客户确认" destination="2">
        <handler seq="1" ref="updateRegisterStatusHandler" desc="更新注册表状态"/>
        <handler seq="2" ref="notifyAdvertiserConfirmHandler" desc="通知客户"/>
    </action>

    <action id="30203" name="fee_revise_accomplish" desc="信息技术费改价项完成" destination="4">
        <handler seq="1" ref="updateRegisterStatusHandler" desc="更新注册表状态"/>
        <handler seq="2" ref="notifyAdvertiserConfirmHandler" desc="通知客户"/>
    </action>

    <action id="30204" name="fee_revise_reject" desc="信息技术费改价项拒绝" destination="5">
        <handler seq="1" ref="updateRegisterStatusHandler" desc="更新注册表状态"/>
        <handler seq="2" ref="notifyAdvertiserConfirmHandler" desc="通知客户"/>
    </action>

    <action id="30205" name="fee_revise_cancel" desc="信息技术费改价项取消" destination="6">
        <handler seq="1" ref="updateRegisterStatusHandler" desc="更新注册表状态"/>
        <handler seq="2" ref="notifyAdvertiserConfirmHandler" desc="通知客户"/>
    </action>

</template>
