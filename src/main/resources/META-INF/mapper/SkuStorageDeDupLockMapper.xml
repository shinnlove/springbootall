    <sql id="baseSql">
        `id`, `activity_id`, `component_id`, `item_id`, `select_id`, `guid`, `change_type`, `change_num`, `create_time`, `update_time`
    </sql>

    <select id="queryStorageLockBySelectIdWithoutChangeType" resultMap="BaseResultMap">
        select
        <include refid="baseSql"/>
        from sku_storage_de_dup_lock
        where `activity_id` = #{activityId} and `select_id` = #{selectId}
        order by `create_time` desc
