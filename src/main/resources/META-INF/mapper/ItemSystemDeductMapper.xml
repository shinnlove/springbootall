<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shinnlove.springbootall.db.dao.ItemSystemDeductRepo">

    <resultMap id="BaseResultMap" type="com.shinnlove.springbootall.db.po.ItemSystemDeductEntity">
        <id column="id" jdbcType="BIGINT" property="id" />
        <result column="activity_id" jdbcType="VARCHAR" property="activityId" />
        <result column="component_id" jdbcType="BIGINT" property="componentId" />
        <result column="item_id" jdbcType="BIGINT" property="itemId" />
        <result column="guid" jdbcType="BIGINT" property="guid" />
        <result column="system_deduct_price" jdbcType="INTEGER" property="systemDeductPrice" />
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime" />
    </resultMap>

    <insert id="insertSelective" useGeneratedKeys="true" keyProperty="entity.id">
        insert into item_system_deduct (`activity_id`, `component_id`, `item_id`, `guid`, `system_deduct_price`)
        values (
                 #{entity.activityId,jdbcType=VARCHAR},
                 #{entity.componentId,jdbcType=BIGINT},
                 #{entity.itemId,jdbcType=BIGINT},
                 #{entity.guid,jdbcType=BIGINT},
                 #{entity.systemDeductPrice,jdbcType=INTEGER}
               )
    </insert>

    <select id="queryByDeductId" resultMap="BaseResultMap">
        select * from item_system_deduct
        where `activity_id` = #{activityId} and `id` = #{deductId}
    </select>

</mapper>